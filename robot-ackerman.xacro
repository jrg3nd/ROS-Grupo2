<?xml version="1.0"?>
<robot name="roboto" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="wheel_radius" value="0.1" />
  <xacro:property name="wheel_length" value="0.05" />
  <xacro:property name="base_size" value="0.5 0.3 0.2" />

  <xacro:macro name="cylinder_inertial" params="mass">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${mass}"/>
      <inertia ixx="0.00025" iyy="0.00025" izz="0.0005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="cylinder_link" params="link_name">
    <link name="${link_name}">
      <visual>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
        </geometry>
        <material name="black">
          <color rgba="0 0 0 1.0"/> 
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
        </geometry>
      </collision>
      <xacro:cylinder_inertial mass="1.0"/>
    </link>
  </xacro:macro>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="${base_size}" /> 
      </geometry>
      <material name="red">
        <color rgba="1 0 0 0.8"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="${base_size}" /> 
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="10.0"/> 
      <inertia ixx="0.025" iyy="0.025" izz="0.01" ixy="0.0" ixz="0.0" iyz="0.0"/> 
    </inertial>
  </link>

  <xacro:cylinder_link link_name="front_left_wheel" />
  <xacro:cylinder_link link_name="front_right_wheel" />
  <xacro:cylinder_link link_name="rear_left_wheel" />
  <xacro:cylinder_link link_name="rear_right_wheel" />

  <joint name="front_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.25 0.15 -0.1" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="front_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.25 -0.15 -0.1" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="rear_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.25 0.15 -0.1" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="rear_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.25 -0.15 -0.1" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
