    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.1"/>
            </geometry>
            <material name="Black">
            <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
        <geometry>
            <sphere radius="0.1"/>
        </geometry>
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <mass value="5"/>
                <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
            </inertial>
        </collision>
