    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.1"/>
            </geometry>
            <material name="black">
            <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.08" length="0.1"/>
            </geometry>
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <mass value="5"/>
                <axis xyz="0.0 0.0 1"/>
