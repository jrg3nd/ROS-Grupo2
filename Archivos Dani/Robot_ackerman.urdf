        </collision>
    </link>

  <link name="right_front_wheel_turn">
    <visual>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <material name="Green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
    </collision>
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <mass value="5"/>
                <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
            </inertial>
  </link>

  <link name="left_front_wheel_turn">
    <visual>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <material name="Green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="1.5707963267948966 0 0" xyz="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.0006770833333333335" ixy="0" ixz="0" iyy="0.0006770833333333335" iyz="0" izz="0.0012500000000000002"/>
    </inertial>
  </link>

<!--JOINTS-->

    <joint name="right_rear_wheel_base" type="continuous">
        <parent link="base_link"/>
        <child link="right_rear_wheel"/>
        <origin xyz="0.25 0.20 0" rpy="1.57 0.0 0.0"/>
        <axis xyz="0.0 1.0 0"/>
    </joint>

    <joint name="left_rear_wheel_base" type="continuous">
        <parent link="base_link"/>
        <child link="left_rear_wheel"/>
        <origin xyz="0.25 -0.20 0.0" rpy="1.57 0.0 0.0"/>
        <axis xyz="0.0 1.0 0"/>
    </joint>

    <joint name="right_front_wheel_base" type="continuous">
        <parent link="right_front_wheel_turn"/>
        <child link="right_front_wheel"/>
        <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <joint name="left_front_wheel_base" type="continuous">
        <parent link="left_front_wheel_turn"/>
        <child link="left_front_wheel"/>
        <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <joint name="right_front_wheel_giro" type="revolute">
        <parent link="base_link"/>
        <child link="right_front_wheel_turn"/>
        <origin xyz="-0.25 0.20 0.0" rpy="1.57 0.0 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
        <limit lower="-0.6" upper="0.6" effort="100" velocity="0.5"/>
    </joint>

    <joint name="left_front_wheel_giro" type="revolute">
        <parent link="base_link"/>
        <child link="left_front_wheel_turn"/>
        <origin xyz="-0.25 -0.20 0.0" rpy="1.57 0.0 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
        <limit lower="-0.6" upper="0.6" effort="100" velocity="0.5"/>
    </joint>
</robot>